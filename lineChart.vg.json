{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://shaahidaltaf.github.io/FIT3179-Data-Vis-2-/co-emissions-per-capita.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "United States",
          "United Kingdom",
          "Malaysia",
          "China",
          "India",
          "Australia"
        ]
      }
    },
    {
      "calculate": "toNumber(datum.Year)",
      "as": "YearNum"
    }
  ],

  "mark": {
    "type": "line"
  },
  "encoding": {
    "x": {
      "field": "YearNum",
      "type": "quantitative",
      "axis": { "title": "Year" }
    },
    "y": {
      "field": "Annual CO2 emissions (per capita)",
      "type": "quantitative",
      "axis": { "title": "CO2 Emissions (Tonnes per Person)" }
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "domain": [
          "United States",
          "United Kingdom",
          "Malaysia",
          "China",
          "India",
          "Australia"
        ],
        "range": [
          "#FF0000",
          "#e06f0a",
          "#003366",
          "#0abce0",
          "#800080",
          "orange"
        ]
      },
      "legend": { "title": "Country" }
    },
    "tooltip": [
      { "field": "YearNum", "type": "quantitative", "title": "Year" },
      {
        "field": "Country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Annual CO2 emissions (per capita)",
        "type": "quantitative",
        "title": "CO2 Emissions (Tonnes per Person)",
        "format": ".2f"
      }
    ]
  },
  "config": {
    "background": "#dff0de",
    "axis": {
      "titleColor": "#527298",
      "labelColor": "#527298",
      "labelFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 15
    }
  }
}
