{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "data": {
    "url": "global investments.csv"
  },
  "mark": {
    "type": "rect"
  },
  "encoding": {
    "x": {
      "field": "Type of Power Supply",
      "type": "nominal",
      "axis": { "title": null, "labels": false, "ticks": false }
    },
    "y": {
      "field": "Percentage Share",
      "type": "quantitative",
      "axis": { "title": null, "labels": false, "ticks": false }
    },
    "size": {
      "field": "USD Invested (Billion)",
      "type": "quantitative",
      "title": "Investment (Billion USD)"
    },
    "color": {
      "field": "Percentage Share",
      "type": "quantitative",
      "title": "Percentage of Total Investment",
      "scale": { "scheme": "blues" }
    },
    "tooltip": [
      {
        "field": "Type of Power Supply",
        "type": "nominal",
        "title": "Power Supply Type"
      },
      {
        "field": "USD Invested (Billion)",
        "type": "quantitative",
        "format": ".2f",
        "title": "Investment (Billion USD)"
      },
      {
        "field": "Percentage Share",
        "type": "quantitative",
        "format": ".2%",
        "title": "Percentage of Total"
      }
    ]
  }
}
